{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OpenSpace Video Creator",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readDir": true,
        "scope": ["$HOME"]
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Owned by Visualiseringscenter C - NOT FOR DISTRIBUTION",
      "icon": [
        "icons/osvc.ico"
      ],
      "identifier": "com.visualiseringscenterc.osvc",
      "longDescription": "Video creation tool for OpenSpace to be used by Visualiseringscenter C",
      "resources": ["assets/outro.mp4", "assets/roboto.ttf", "assets/*.png"],
      "shortDescription": "",
      "targets": "msi",
      "publisher": "Visualiseringscenter C",
      "windows": {
        "wix": {
          "language": "sv-SE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 750,
        "resizable": false,
        "title": "OpenSpace Video Creator",
        "width": 600
      }
    ]
  }
}
