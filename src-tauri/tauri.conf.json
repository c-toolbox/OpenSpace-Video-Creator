{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "OpenSpace Video Creator",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readDir": true,
        "scope": ["$HOME"]
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Owned by Visualiseringscenter C - NOT FOR DISTRIBUTION",
      "icon": [
        "icons/osvs.ico"
      ],
      "identifier": "com.visc.spaceport",
      "longDescription": "Video creation tool for OpenSpace to be used by Visualiseringscenter C",
      "resources": ["assets/outro.mp4", "assets/roboto.ttf"],
      "shortDescription": "",
      "targets": "msi",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "OpenSpace Video Creator",
        "width": 700
      }
    ]
  }
}
